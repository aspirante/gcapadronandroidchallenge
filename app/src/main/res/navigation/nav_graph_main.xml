<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph"
        app:startDestination="@id/mapRoutesFragment">
    <fragment
            android:id="@+id/mapRoutesFragment"
            android:name="com.mvvm.route.ui.fragments.MapRoutesFragment"
            android:label="Routes"
            tools:layout="@layout/fragment_maps">
        <action
                android:id="@+id/action_mapRoutesFragment_to_detailFragment"
                app:destination="@id/detailFragment" />
    </fragment>
    <fragment
            android:id="@+id/detailFragment"
            android:name="com.mvvm.route.ui.fragments.DetailFragment"
            android:label="Detail"
            tools:layout="@layout/fragment_detail" >
        <action
                android:id="@+id/action_detailFragment_to_mapRoutesFragment"
                app:destination="@id/mapRoutesFragment" />
    </fragment>
</navigation>